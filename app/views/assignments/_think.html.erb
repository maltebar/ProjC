<h1 align="center">Coding Time</h1>
<h3><%=@assignment.title%></h3>
<h4><%=safe_join(@assignment.description.split("\r\n"), "<br />".html_safe)%></h4>
<br>

<strong>Your Code<strong>
<%= form_for(@submission, html: { id: "submission_form" }) do |f| %>
	<div class="field">
    	<%#= f.label :content, "Code" %><br>
    	<%= f.hidden_field :content, {:id => 'content_field'}%>
    	<%= f.hidden_field :length, {:id => 'length_field'}%>
    	<div id="editor1" style="height: 450px; width: 570px"><%= @submission.content%></div>
    	<br><br>
    </div>
<%end%>

<script src="ace.js" type="text/javascript" charset="utf-8"></script>

<br><br><br>


<script>
  var editor1 = ace.edit("editor1");
  editor1.setTheme("ace/theme/twilight");
  editor1.getSession().setMode("ace/mode/java");  
  editor1.setOptions({
    fontSize: "11pt"
  }); 
  editor1.setOptions({
    maxLines: Infinity
  });
  editor1.setOptions({
    minLines: 25
  });
</script>

